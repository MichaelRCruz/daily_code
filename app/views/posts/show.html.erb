<div id="postTitle"><%= @post.title %></div>

<div id="outerCodeContainer">
  <div id="codeContainer"><pre><%= @syntax_highlight.html_safe %></pre>
  </div>
<br>
<% @post.comments.each do |comment| %>
  <div id="commentBox">
    <%= comment.user.name %>:
    <%= comment.content %>
  </div>
  <br>
<% end %>
</div>

<%= form_for [@post, @comment] do |f| %>

  <div id="comment">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <%= f.submit 'submit comment' %>
<% end %>

<%= link_to "back to the Posts", posts_path %>
<%= link_to 'delete this post', post_path, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } if current_user == @post.user %>
