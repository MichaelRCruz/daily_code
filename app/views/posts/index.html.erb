<h1>Today's Posts</h1>

<ul>
  <% @posts.each do |post| %>
  <li>
    <%= post.title %>
  </li>
  <% end %>
</ul>

<%= current_user.name if current_user %>
<% if current_user %>
  Logged in as: <%= current_user.name %> <%= link_to 'Log Out', logout_path, method: :delete %>
<% else %>
  <%= link_to 'Log In', login_path %>
  <%= link_to 'Sign Up', new_user_path %>
<% end %>
