<!DOCTYPE html>
<html>
  <head>
    <title>DailyCode</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="https://dailycode.herokuapp.com/">
            <img alt="Brand" src="...">
          </a>
        </div>
      </div>
          <% if current_user %>
          <div class="dropdown">
            <%= link_to "create new post", new_post_path %>
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Hello, <%= current_user.name %>
            <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><a href="#"><%= link_to 'log out', logout_path, method: :delete %></a></li>
              <li><a href="#"><%= link_to 'view profile', user_path(current_user) %></a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">maybe settings</a></li>
            </ul>
          </div>
          <% else %>
          <div id="logInLogOut">
            <%= link_to 'Log In', login_path %>
            <%= link_to 'Sign Up', new_user_path %>
          <% end %>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
