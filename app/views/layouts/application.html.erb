<!DOCTYPE html>
<html>
  <head>
    <title>DailyCode</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" id="brand"            href="https://dailycode.herokuapp.com/">
            <!-- <img alt="daily_code.io"> -->
            dailycode.io
          </a>
          <span> an online diary for developers with command line interactivity</span>
        </div>
      </div>
          <% if current_user %>
          <div class="dropdown">
            <%= link_to "create new post", new_post_path, class: 'btn btn-default createNew' %>
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            hello, <%= current_user.name %>
            <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">

              <li><a href="#"><%= link_to 'log out', logout_path, method: :delete %></a></li>
              <li><a href="#"><%= link_to 'view profile', user_path(current_user) %></a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">maybe settings</a></li>

            </ul>

          </div>
          <% else %>
          <div id="logInLogOut">
            <%= link_to 'log_in', login_path, class: 'btn btn-default buttons' %>
            <%= link_to 'sign_up', new_user_path, class: 'btn btn-default buttons' %>
          <% end %>
          </div>
    </nav>

    <%= yield %>

  </body>
</html>
