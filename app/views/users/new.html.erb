<h1>Add a new user.</h1>

<%= form_for @user do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password_digest %>
    <%= f.text_field :password_digest %>
  </div>
  <%= f.submit 'submit this user' %>
<% end %>

<%= link_to "back to the Users", users_path %>
